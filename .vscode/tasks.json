{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "重新构建项目",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "production"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "清理 dist 目录",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "if exist dist rmdir /s /q dist"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "完全重新构建",
      "dependsOrder": "sequence",
      "dependsOn": ["清理 dist 目录", "重新构建项目"],
      "problemMatcher": []
    }
  ]
}
